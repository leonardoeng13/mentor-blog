
<p class="h3">
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong class="text-start">Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong class="text-start">Text:</strong>
  <%= @post.text %>
</p>

<p>
  <strong class="text-start">Comments:</strong>
  <%= @post.CommentsCounter %>
</p>

<p>
  <strong class="text-start">Likes:</strong>
  <%= @post.LikesCounter %>
</p>

<%if can? :update, @post %><%= link_to 'Edit', edit_post_path(@post) %> |<% end %>
<%= link_to 'Back', posts_path %>
